@model SisMedico.Domain.Entities.IPagedList

@{
    var fim = Model.PageIndex + (int)Model.MaxPageShowOrTotalPage / 2;
    var ini = Model.PageIndex - (int)Model.MaxPageShowOrTotalPage / 2;
    if (fim > Model.TotalPages)
    {
        fim = (int)Model.TotalPages;
        ini = fim - Model.MaxPageShowOrTotalPage;
        if (ini < 1) ini = 1;
    }
    for (var i = ini; i <= fim; i++)
    {
        if (i == Model.PageIndex)
        {
            <li class="page-item active">
                <a href="#" class="page-link" style="cursor: default">@i <span class="sr-only">(current)</span></a>
            </li>
        }
        else
        {
            <li class="page-item"><a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pi="@i" asp-route-ps="@Model.PageSize" asp-route-q="@Model.Query" asp-route-selectedValue="@Model.SelectedValue">@i</a></li>
        }
    }
}