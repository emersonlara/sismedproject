@using SisMedico.Domain.Enums
@using SisMedico.Domain.Extensions
@using SisMedico.Mvc.ViewModels.Medico
@model MedicoViewModel

<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Crm" class="control-label"></label>
    <input asp-for="Crm" class="form-control" />
    <span asp-validation-for="Crm" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DataNascimento" class="control-label"></label>
    <input type="datetime-local" asp-for="DataNascimento" class="form-control" />
    <span asp-validation-for="DataNascimento" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="EspecialidadesIds" class="control-label"></label>
    <select asp-for="EspecialidadesIds" class="form-control" multiple>
        @foreach (var especialidade in ViewBag.Especialidades as SelectList)
        {
            <option value="@especialidade.Value">@especialidade.Text</option>
        }
    </select>
    <span asp-validation-for="EspecialidadesIds" class="text-danger"></span>
</div>